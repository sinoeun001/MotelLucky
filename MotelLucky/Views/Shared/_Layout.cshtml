<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/DataTables/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/DataTables/js/jquery.dataTables.min.js"></script>
    <script src="~/DataTables/js/dataTables.bootstrap5.js"></script>
</head>
<body>

    <div class="container-fluid">    
        
        <div class="row row-cols-1 gy-0">          
            <div class="col">
                <!--Navbar Application -->
                @Html.Partial("_Navbar")
            </div>
            <div class="col">
                @Html.Partial("_Subnavbar")
            </div>
            <div class="col">                
               <div class="row row-cols-1  row-cols-md-2">
                   <div class="col-0 col-md-2 pt-md-2 d-flex d-none d-md-block">
                      @Html.Partial("_Leftmenu")
                   </div>
                   <div class="col-12 col-md-10 bg-success bg-opacity-10">
                       @RenderBody()
                       <hr />
                       <footer>
                           <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                       </footer>
                   </div>
               </div>              
            </div>
        </div>
       
    </div>   
   
    
    <script src="~/lib/font-awesome/js/all.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
